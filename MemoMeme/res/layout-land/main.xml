<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_menu_bg_land"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp" >

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonGo" android:layout_weight="1"/>

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonResume" android:layout_weight="1" android:clickable="false"/>

    <Button
        android:id="@+id/buttonLoad"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/buttonLoad" android:layout_weight="1"/>

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:text="@string/buttonExit" />

</LinearLayout>
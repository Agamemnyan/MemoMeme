<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageChallenge"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:contentDescription="@string/imgChallengeCons"
            android:scaleType="fitCenter"
            android:src="@integer/main" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonGo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_bg"
                android:padding="@dimen/button_text_padding"
                android:text="@string/buttonGo"
                android:textColor="@color/default_dark_red"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_bg"
                android:padding="@dimen/button_text_padding"
                android:text="@string/button_continue"
                android:textColor="@color/default_dark_red"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_bg"
                android:padding="@dimen/button_text_padding"
                android:text="@string/button_settings"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonHighScores"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_bg"
                android:padding="@dimen/button_text_padding"
                android:text="@string/highScores"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_bg"
            android:padding="@dimen/button_text_padding"
            android:text="@string/buttonExit"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/main_imagebuttons_margins"
        android:background="@drawable/button_bg"
        android:contentDescription="@string/button_about"
        android:src="@drawable/button_about" />

    <ImageButton
        android:id="@+id/ibHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/main_imagebuttons_margins"
        android:background="@drawable/button_bg"
        android:contentDescription="@string/button_help"
        android:src="@drawable/button_help" />

    <com.google.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_id"
        ads:loadAdOnCreate="true" />

</RelativeLayout>